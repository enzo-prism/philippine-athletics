{
  "name": "my-v0-project",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "pnpm changelog:verify && next build",
    "data:commits": "node scripts/generate-commit-log.mjs",
    "data:commits:check": "node scripts/generate-commit-log.mjs --check",
    "data:check": "tsx lib/data/validate.ts",
    "dev": "next dev",
    "lint": "pnpm changelog:verify && eslint .",
    "start": "next start",
    "test:flows": "bash scripts/test-flows.sh tests/flows --project=Desktop",
    "test:flows:full": "bash scripts/test-flows.sh tests/flows",
    "test:flows:ui": "bash scripts/test-flows.sh tests/flows --ui",
    "test:flows:codegen": "pnpm exec playwright codegen $PLAYWRIGHT_BASE_URL",
    "test:design": "bash scripts/test-design.sh",
    "test:design:update": "bash scripts/test-design.sh --update-snapshots",
    "changelog:verify": "node scripts/check-changelog-sync.mjs",
    "push:main": "pnpm changelog:verify && git push origin main"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@vercel/analytics": "latest",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "embla-carousel-react": "8.5.1",
    "input-otp": "1.4.1",
    "lucide-react": "^0.454.0",
    "next": "16.0.7",
    "next-themes": "latest",
    "radix-ui": "^1.4.3",
    "react": "19.2.1",
    "react-day-picker": "9.8.0",
    "react-dom": "19.2.1",
    "react-hook-form": "^7.60.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "unicornstudio-react": "2.0.1-1",
    "vaul": "^1.1.2",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.53.2",
    "@tailwindcss/postcss": "^4.1.9",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8.5",
    "tailwindcss": "^4.1.9",
    "tsx": "^4.19.2",
    "tw-animate-css": "1.3.3",
    "typescript": "^5"
  },
  "pnpm": {
    "allowedBuiltDependencies": [
      "esbuild"
    ]
  }
}
